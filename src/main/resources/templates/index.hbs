
{{#partial "content"}}

    <h1>Items list!</h1>
    <div class="col-md-4">
        <form action="/item/purchased" method="post">
            {{#if items}}
                {{#each items}}
                    <div class="radio">
                        <label>
                        <input type="checkbox" name="item-onlist" value="true"><a href="/item/{{id}}">{{ itemName }}</a>
                        </label>
                    </div>
            {{/each}}
        </form>
        <button type="submit" class="btn btn-success">Mark as Purchased!</button>
    </div>
    {{else}}
        <p>No locations to list!</p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}